# Example environment variables for ChadJEE backend
# Copy this file to .env and customize for your environment
# For production, set these in the Render dashboard

# Node environment - set to 'production' on Render
NODE_ENV=production

# Session secret - IMPORTANT: Generate a strong random string for production
# You can use: openssl rand -base64 32
SESSION_SECRET=replace-with-a-secure-random-string

# Allowed frontend origins for CORS - comma-separated list 
# CRITICAL: This must include your frontend URL from Render
ALLOWED_ORIGINS=https://chadjee.onrender.com,https://www.chadjee.onrender.com

# PostgreSQL connection - Render provides this automatically as DATABASE_URL
# DATABASE_URL=postgres://username:password@host:port/database

# Trust proxy - required for Render deployment with proper cookie handling
TRUST_PROXY=true